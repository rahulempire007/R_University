<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"

    android:background="@drawable/redd"

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="palletech.com.r_university.CourseDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circular:"
        android:textSize="60px"
        android:gravity="center"
        android:id="@+id/text1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase course with"
        android:textSize="60px"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/rg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendrive"
            android:textSize="50px"
            android:id="@+id/rb1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebAccess"
            android:textSize="50px"
            android:id="@+id/rb2" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Fee:"
        android:layout_marginTop="30dp"
        android:id="@+id/text2"
        android:gravity="center"
        android:textSize="50px" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment via"
        android:gravity="center"
        android:layout_marginTop="30dp"

        android:textSize="60px" />

   <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Credit card"
    android:textSize="50px"
    android:id="@+id/button1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paypal"
        android:textSize="50px"
        android:id="@+id/button2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tview1"
                android:layout_marginTop="20dp"
                android:text="Summary:"
                android:gravity="center"
                android:textSize="50px"
                android:textColor="#fff"
                />

           <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tview2"
               android:layout_marginTop="10dp"
            android:text="Status:"
               android:gravity="center"
               android:textSize="50px"
               android:textColor="#fff"/>

           <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
            android:id="@+id/tview3"
               android:gravity="center"
            android:text="Mobile number:"
               android:textSize="50px"
               android:textColor="#fff"/>

           <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tview4"
               android:layout_marginTop="10dp"
            android:text="Delivery:"
               android:gravity="center"
               android:textSize="50px"
               android:textColor="#fff"/>


    </LinearLayout>

</LinearLayout>
